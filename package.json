{
    "name": "confetti-frontend",
    "version": "0.1.0",
    "scripts": {
        "predev": "yarn make-env",
        "dev": "NODE_OPTIONS='--inspect=0.0.0.0' next",
        "build": "next build",
        "start": "next start",
        "typecheck": "tsc",
        "lint": "eslint --ext .js,.ts,.tsx ./src/",
        "lint:fix": "yarn lint --fix",
        "format": "prettier --write \"src/**/*.{js,ts,tsx}\"",
        "format:validate": "yarn format --version; yarn format --no-color --check",
        "test": "jest",
        "test:watch": "yarn test --watch",
        "test:coverage": "yarn test --collect-coverage",
        "make-env": "node ./scripts/makeEnv.js"
    },
    "dependencies": {
        "@react-hook/resize-observer": "^1.2.0",
        "axios": "^0.21.1",
        "grommet": "^2.16.3",
        "grommet-icons": "^4.5.0",
        "mobx": "^6.1.8",
        "mobx-react-lite": "^3.2.0",
        "next": "^10.0.8",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-is": "^17.0.1",
        "react-tsparticles": "^1.20.1",
        "styled-components": "^5.2.1"
    },
    "devDependencies": {
        "@testing-library/dom": "^7.30.0",
        "@testing-library/jest-dom": "^5.11.9",
        "@testing-library/react": "^11.2.5",
        "@testing-library/user-event": "^12.8.3",
        "@types/jest": "^26.0.20",
        "@types/node": "^15.12.4",
        "@types/react": "^17.0.3",
        "@types/react-dom": "^17.0.2",
        "@types/styled-components": "^5.1.9",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "@typescript-eslint/parser": "^4.17.0",
        "babel-jest": "^26.6.3",
        "babel-plugin-styled-components": "^1.12.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.22.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "typescript": "^4.2.3"
    },
    "eslintIgnore": [
        "node_modules",
        "coverage",
        ".vscode",
        ".github",
        ".idea"
    ],
    "prettier": {
        "singleQuote": false,
        "jsxSingleQuote": true,
        "trailingComma": "es5",
        "printWidth": 120,
        "tabWidth": 4
    },
    "license": "Apache-2.0"
}
