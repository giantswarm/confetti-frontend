{
    "name": "confetti-frontend",
    "version": "0.1.0",
    "scripts": {
        "predev": "yarn make-env",
        "dev": "NODE_OPTIONS='--inspect=0.0.0.0' next",
        "build": "next build",
        "start": "next start",
        "typecheck": "tsc",
        "lint": "eslint --ext .js,.ts,.tsx ./src/",
        "lint:fix": "yarn lint --fix",
        "format": "prettier --write \"src/**/*.{js,ts,tsx}\"",
        "format:validate": "yarn format --version; yarn format --no-color --check",
        "test": "jest",
        "test:watch": "yarn test --watch",
        "test:coverage": "yarn test --collect-coverage",
        "make-env": "node ./scripts/makeEnv.js"
    },
    "dependencies": {
        "@react-hook/resize-observer": "^1.1.0",
        "axios": "^0.21.0",
        "grommet": "^2.16.2",
        "grommet-icons": "^4.5.0",
        "mobx": "^6.0.4",
        "mobx-react-lite": "^3.1.6",
        "next": "^10.0.3",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-is": "^17.0.1",
        "react-tsparticles": "^1.18.11",
        "styled-components": "^5.2.1"
    },
    "devDependencies": {
        "@testing-library/dom": "^7.26.5",
        "@testing-library/jest-dom": "^5.11.6",
        "@testing-library/react": "^11.2.2",
        "@testing-library/user-event": "^12.6.0",
        "@types/jest": "^26.0.18",
        "@types/node": "^14.14.14",
        "@types/react": "^16.9.56",
        "@types/react-dom": "^17.0.0",
        "@types/styled-components": "^5.1.7",
        "@typescript-eslint/eslint-plugin": "^4.10.0",
        "@typescript-eslint/parser": "^4.10.0",
        "babel-jest": "^26.6.3",
        "babel-plugin-styled-components": "^1.12.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.14.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3"
    },
    "eslintIgnore": [
        "node_modules",
        "coverage",
        ".vscode",
        ".github",
        ".idea"
    ],
    "prettier": {
        "singleQuote": false,
        "jsxSingleQuote": true,
        "trailingComma": "es5",
        "printWidth": 120,
        "tabWidth": 4
    },
    "license": "Apache-2.0"
}
